<div class="container">
  <h1>Все посты</h1>
  <div class="posts-all">
    <% @posts.each do |post| %>
        <div class="post col-md-4">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title"><%= link_to post.title, post_path(post) %></h3>
            </div>
            <div class="panel-body">
              <p>Категория: <%= post.post_category.name %> </p>
              <p>Организация: <%= post.organization.name %></p>
              <p>Автор: <%= post.user.name %></p>
              <p>Опубликовано: <%= post.created_at.strftime("%d %b. %Y") %></p>
              <div class="text-right">
              <%= link_to "Читать", post_path(post), class: "btn btn-default" %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>