<div class="form-block">
  <%= form_for @organization, class: "form-horizontal" do |f| %>
      <div class="form-group  row">
        <%= f.label :organization_category_id, class: "col-sm-4 control-label" %>
        <div class="col-sm-6">
          <%= f.collection_select :organization_category_id, OrganizationCategory.all, :id, :name, class: "form-select form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :name, class: "col-sm-4 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :oblast_id, class: "col-sm-4 control-label" %>
        <div class="col-sm-6">
          <%= f.collection_select :oblast_id, Oblast.all, :id, :name, class: "form-select form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :longitude, class: "col-sm-4 control-label" %>
        <div class="col-sm-6">
          <%= f.number_field :longitude, class: "form-control",id:"longitude" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :latitude, class: "col-sm-4 control-label" %>
        <div class="col-sm-6">
          <%= f.number_field :latitude, class: "form-control",id:"latitude" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :location, class: "col-sm-4 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :location, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :address, class: "col-sm-4 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :contact_person, class: "col-sm-4 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :contact_person, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :phone, class: "col-sm-4 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :phone, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :url, class: "col-sm-4 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :url, class: "form-control" %>
        </div>
      </div>

      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="form-group move-right col-sm-offset-4">
        <%= f.submit(btn_txt, class: "btn btn-primary") %>
      </div>
  <% end %>
</div>





