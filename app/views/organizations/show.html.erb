<% content_for :title, @organization.name %>

<% meta_tag :keywords, "#{@organization.name}, #{@organization.location}, #{@organization.oblast.name}" %>


<div class="container">
  <div class="row">
    <h1><%= @organization.name %></h1>
    <div class="col-md-6">
      <h5>Общая информация об организации:</h5>
      <ul>
        <li>Местоположение: <%= @organization.location %></li>
        <li>Область: <%= @organization.oblast.name %></li>
        <li>Адрес: <%= @organization.address %></li>
        <li>Телефон: <%= @organization.phone %></li>
      </ul>
    </div>

    <div class="col-md-6">
      <h4>Расположение организации на карте:</h4>

      <% unless @organization.latitude.empty? || @organization.longitude.empty? %>
          <div class="org-coordinate">
            <div id="org-latitude"><%= @organization.latitude %></div>
            <div id="org-longitude"><%= @organization.longitude %></div>
          </div>

          <div id="organization-map" class="organization-map">
            <button class="pure-button " id="btn-locate-user"></button>

          </div>
      <br><br>
      <% else %>
      <p>Для данной организации нет информации о ее расположении на карте!</p>
      <% end %>
    </div>

    <% if user_signed_in? && (current_user == @user) %>
      <%= link_to t('.Edit'), edit_organization_path(@organization) %>
    <% end  %>
    <hr>
    <div class="posts-all">
      <% @post.each do |post| %>
          <div class="post col-md-4">
            <div class="panel panel-success">
              <div class="panel-heading">
                <h3 class="panel-title"><%= link_to post.title, post_path(post) %></h3>
              </div>
              <div class="panel-body">
                <p>Категория: <%= post.post_category.name %> </p>
                <p>Организация: <%= post.organization.name %></p>
                <p>Автор: <%= post.user.name %></p>
                <p>Опубликовано: <%= post.created_at.strftime("%d %b. %Y") %></p>
                <div class="text-right">
                  <%= link_to "Читать", post_path(post), class: "btn btn-default" %>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>