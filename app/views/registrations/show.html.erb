<% content_for :title, @user.name %>
<div class="container">
  <h1><%= t(".Profile") %>: <% @user.name  %></h1>
  <p><%= t(".Phone") %>: <%= @user.phone  %></p>
  <p><%= t(".Email") %>: <%= @user.email  %></p>
  <p><%= link_to t('.Registration organization'),  new_organization_path, class: 'btn btn-primary' %></p>
  <p><%= link_to t('.Create new post'), new_post_path, class: 'btn btn-primary' %></p>
  <h2><%= t('.Organizations in which you owner') %>: </h2>
  <ul>
  <% UserOrganization.where(user_id:@user,role:1).each do |item| %>
    <% if item.organization.active == true %>
      <li><%= item.organization.name %></li>
      <% id=item.organization.id %>
        <%= link_to t(".Edit"), edit_organization_path(id) %>
        <%= link_to t(".Delete"), organization_deactivate_path(id), method: :put, data: { confirm: 'Вы уверены, что хотите удалить организацию?'} %>
    <% end %>
  <% end %>
  </ul>
  <h2><%= t(".Organizations in which you participant") %>: </h2>
  <ul>
    <% @participant_organizations.each do |item| %>
      <% if item.organization.active == true %>
        <li><%= item.organization.name %></li>
      <% end %>
    <% end %>
  </ul>
  <h2><%= t(".Your organization participation request") %>: </h2>
  <ul>
    <% @waiting_for_approval.each do |item| %>
        <li><%= item.organization.name %></li>
    <% end %>
  </ul>
  <h2><%= t(".requests to joining to your organization") %></h2>
  <ul>

      <% @requests.each do |item| %>
        <%qw=item.user_id%>
        <li>
        <%pol= User.find_by(id:qw) %>
        <%= pol.name %>
          <%= t(".wants to join your organization") %>
        <%orgid= item.organization_id %>
        <% org=Organization.find_by(id:orgid) %>
        <%= org.name %>
        </li>
    <%end %>
  </ul>
  <div class="aids-block">
    <h2>Ваши незакрытые темы с просьбой о помощи:</h2>
    <% @opened_posts.each do |post| %>
      <div class="post-item">
        <h3 class="post-item-pseudolink"><%= post.title %></h3>
        <div class="post-item-body">
          <%= post.body %>
        </div>
        <div class="post-aids">
          <h4>На данный запрос о помощи откликнулись:</h4>
          <% post.aids.each do |post_aid| %>
            <div class="aid-item">
              <div class="aid-author">
                <div><b><%= t(".Published from name organization") %>:</b> <%= post_aid.organization.name %>, <em>дата публикации:</em> <%= post_aid.created_at %></div>
              </div>
              <p><%= post_aid.description %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
  <div class="aids-block">
  <h2><%= t(".Your responses to the requests for assistance") %>:</h2>
  <% @aids.each do |aid| %>
      <div class="aid-item">
        <div class="aid-author">
          <div><b><%= t(".Published from name organization") %>:</b> <%= aid.organization.name %>, <em>дата публикации:</em> <%= aid.created_at %></div>
        </div>
        <p><%= aid.description %></p>
        <% if aid.status == 0 %>
            <div class="aid-status"><b>Статус: </b><%= t(".You responded") %></div>
            <div>
              <%= link_to 'Редактировать', edit_aid_path(respond_post: aid.post) %>
              <%= link_to 'Удалить', aid_path, method: :delete, data: { confirm: 'Are you sure?'} %>
            </div>
        <% elsif aid.status == 1 %>
            <div class="aid-status"><b>Статус: </b><%= t(".You are assisted, on the request. Thank you for your response") %>!!!</div>
        <% else %>
            <div class="aid-status"><b>Статус: </b><%= t(".You responded, but aid does not have") %></div>
        <% end %>
      </div>
  <% end %>
</div>
</div>
